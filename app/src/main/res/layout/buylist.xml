<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listviewbuy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/buyaddrb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/buypincdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/buycommnameb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/buyphnob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="152dp" />

    <TextView
        android:id="@+id/buylocb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="152dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pestpro0"
                android:layout_width="353dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pest0"/>


            <ImageView
                android:id="@+id/pestpro1"
                android:layout_width="353dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bar"

                 />

            <ImageView
                android:id="@+id/pestpro2"
                android:layout_width="353dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pest4"

                />

            <ImageView
                android:id="@+id/pestpro3"
                android:layout_width="353dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pest3"
                />


        </LinearLayout>

    </ScrollView>
</LinearLayout>